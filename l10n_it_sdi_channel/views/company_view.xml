<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_account_config_settings">
            <field name="name">view_account_config_settings</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="l10n_it_fatturapa.view_account_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='fatturapa_settings']" position="after">
                    <group name="sdi_channel">
                        <group>
                            <field name="sdi_channel_id" required="1" />
                            <field name="sdi_channel_type" invisible="1"/>
                        </group>
                        <group>
                            <label for="email_from_for_fattura_pa" attrs="{'invisible': [('sdi_channel_type', '!=', 'pec')]}"/>
                            <field name="email_from_for_fattura_pa" attrs="{'invisible': [('sdi_channel_type', '!=', 'pec')]}"/>
                        </group>
                        <group>
                            <label for="email_exchange_system" attrs="{'invisible': [('sdi_channel_type', '!=', 'pec')]}"/>
                            <field name="email_exchange_system" attrs="{'invisible': [('sdi_channel_type', '!=', 'pec')]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
