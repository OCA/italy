<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensarco_config_settings_default" model="ir.ui.view">
        <field name="name">view_enasarco.config.settings.default</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--<xpath expr="//div[@class='row mt16 o_settings_container']"-->
            <!--position="after">-->
            <xpath expr="//div[@id='bank_cash']" position="after">
                <h2>Enasarco</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label string="Enasarco settings"/> <!-- mod-->
                            <span class="fa fa-lg fa-building-o"
                                  title="Values set here are company-specific."
                                  groups="base.group_multi_company"/>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="enasarco_account_id"
                                           class="col-md-3 o_light_label"/>
                                    <field name="enasarco_account_id"
                                           options="{'no_create_edit': True, 'no_open': True}"/>
                                </div>
                                <div class="row">
                                    <label for="enasarco_journal_id"
                                           class="col-md-3 o_light_label"/>
                                    <field name="enasarco_journal_id"
                                           options="{'no_create_edit': True, 'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
