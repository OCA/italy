<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

        <record model="ir.ui.view" id="view_message_form_pec">
            <field name="name">mail.message.form.pec</field>
            <field name="model">mail.message</field>
            <field name="inherit_id" ref="mail.view_message_form"/>
            <field name="arch" type="xml">
                <field name="subtype_id" position="after" >
                    <field name="ref_msg_id" />
                    <field name="pec_msg_id" />
                    <field name="pec_type" />
                </field>
                <field name="body" position="replace" >
                    <notebook>
                        <page string="Body">
                            <field name="body"/>
                        </page>
                        <page string="Server Notification Log Message">
                                <group>
                                        <field name="inprogress_message_id"/>
                                        <field name="reception_message_id"/>
                                        <field name="no_reception_message_id"/>
                                        <field name="notice_delivery_err_message_id"/>
                                        <field name="delivery_message_id"/>
                                        <field name="delivery_err_message_id"/>
                                        <field name="virus_message_id"/>
                                </group>
                        </page>
                    </notebook>


                </field>
                <field name="model" position="before" >
                    <field name="server_id" />
                    <field name="out_server_id" />
                    <field name="reception_message_id" />
                    <field name="delivery_message_id" />
                    <field name="error" />
                </field>
            </field>
        </record>

