<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>

    <record model="ir.ui.view" id="view_message_tree_pec">
        <field name="name">view_message_tree_pec</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_message_tree"/>
        <field name="arch" type="xml">
            <field name="res_id" position="after">
                <field name="pec_type"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_message_search_pec">
        <field name="name">view_message_search_pec</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_message_search"/>
        <field name="arch" type="xml">
            <field name="res_id" position="after">
                <field name="pec_type"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_message_form_pec">
        <field name="name">mail.message.form.pec</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_message_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="PEC data">
                    <group>
                        <field name="pec_msg_id" />
                        <field name="pec_type" />
                        <field name="direction" goups="base.group_erp_manager" />
                        <field name="server_id" />
                        <field name="out_server_id" />
                        <field name="pec_error" />
                    </group>
                </page>
                <page string="Server Notification Log Messages">
                    <field name="pec_notifications_ids"/>
                </page>
                <page string="Attachments">
                    <field name="attachment_ids"/>
                </page>
            </notebook>
        </field>
    </record>

    <record id="mail_pec_main" model="ir.ui.menu">
        <field name="name">PEC</field>
        <field name="parent_id" ref="contacts.menu_contacts"/>
        <field name="groups_id" eval="[(4, ref('l10n_it_pec_messages.group_pec'))]"/>
    </record>

    <record id="mail_write_pec" model="ir.ui.menu">
        <field name="name">Write PEC</field>
        <field name="action" ref="action_email_pec_compose_message_wizard"/>
        <field name="parent_id" ref="mail_pec_main"/>
        <field name="groups_id" eval="[(4, ref('l10n_it_pec_messages.group_pec'))]"/>
    </record>

</data>
</odoo>
