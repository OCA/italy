<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_partner_ateco_form" model="ir.ui.view">
            <field name="name">partner.ateco.form</field>
            <field name="model">res.partner.ateco</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Partner Ateco Category">
                    <group>
                        <field name="ateco_category_id" />
                        <field name="partner_id" />
                        <field name="main_category" />
                    </group>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_partner_form_inherit_ateco">
            <field name="name">partner.form.ateco</field>
            <field name="model">res.partner</field>
            <field name="inherit_id"
                   ref="base.view_partner_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Ateco">
                        <group colspan="4" string="Ateco categories">
                            <field colspan="4"
                                   name="ateco_category_ids"
                                   context="{'partner_id': id}"
                                   nolabel="1">
                                <tree editable="bottom">
                                    <field name="ateco_category_id" />
                                    <field name="main_category" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
