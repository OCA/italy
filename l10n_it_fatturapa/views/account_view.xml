<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem name="Fattura PA" id="menu_fattura_pa_receivables"
                  parent="account.menu_finance_receivables" />
        <menuitem name="Fattura PA" id="menu_fattura_pa_payables"
                  parent="account.menu_finance_payables" />

        <record id="view_payment_term_form_fatturapa" model="ir.ui.view">
            <field name="name">account.payment.term.fatturapa</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form" />
            <field name="arch" type="xml">
                <field name="line_ids" position="after">
                    <group col="2" colspan="2">
                        <separator colspan="2" string="FatturaPA" />
                        <field name="fatturapa_pt_id" />
                        <field name="fatturapa_pm_id" />
                    </group>
                </field>
            </field>
        </record>

        <record id="view_invoice_line_form_fatturapa" model="ir.ui.view">
            <field name="name">account.invoice.line.fatturapa</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form" />
            <field name="arch" type="xml">
                <field name="invoice_line_tax_id" position="after">
                    <separator string="Fattura Elettronica" colspan="4"/>
                    <group colspan="4">
                        <group colspan="4">
                            <field name="admin_ref"/>
                        </group>
                        <group string="Related Documents" colspan="4">
                            <field name="related_documents" nolabel="1" colspan="4">
                                <tree editable="bottom" string="Related Documents">
                                    <field name="type" />
                                    <field name="name" />
                                    <field name="lineref" readonly="1" />
                                    <field name="date" />
                                    <field name="numitem" />
                                    <field name="code" />
                                    <field name="cig" />
                                    <field name="cup" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>
