<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_it_central_journal_a4_portrait" model="report.paperformat">
        <field name="name">Central Journal Reports A4 Portrait</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <template id="layout_header">
        <div class="header">
            <div class="row">
                <div class="col-xs-4">
                    <h3>
                        <span t-esc="company.name"/>
                    </h3>
                    <span t-esc="company.street" class=""/>
                    <br/>
                    <span t-esc="company.zip" class=""/>
                    -
                    <span t-esc="company.city" class=""/>
                    -
                    <span t-esc="company.state_id.code" class=""/>
                    <br/>
                    <span class="text-right">Vat:</span>
                    <span t-esc="company.partner_id.vat" class=""/>
                    <br/>
                </div>
                <div class="col-xs-4 col-xs-offset-4 text-right">
                    <h3 t-esc="title"/>
                </div>
            </div>
        </div>
    </template>

    <template id="layout_footer">
        <div class="footer">
            <div class="row">
                <div class="col-xs-4">
                </div>
                <t t-if="not o and doc_id">
                    <t t-set="o" t-value="doc_id"/>
                </t>
                <div class="col-xs-4 col-xs-offset-4 text-right">
                    <ul class="list-inline">Pag:
                        <li>
                            <t t-esc="year_footer"/>
                        </li>
                        <li>/</li>
                        <li>
                            <span class="page"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </template>

    <template id="journal_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <t t-call="l10n_it_central_journal.layout_header"/>
        <t t-raw="0"/>
        <t t-call="l10n_it_central_journal.layout_footer"/>
    </template>

</odoo>