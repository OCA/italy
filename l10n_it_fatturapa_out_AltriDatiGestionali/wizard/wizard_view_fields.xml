<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="wizard_view_field_form" model="ir.ui.view">
            <field name="name">view_fields_view.form</field>
            <field name="model">view_fields</field>
            <field name="arch" type="xml">
                <form string="Edit fields">
                    <sheet>
                        <group>
                            <label for='name'>Field name</label>
                            <div name="Field name">
                                <field name="name" class="oe_inline" style="width: 500px"/>
                                <button name="reset_name" type="object" icon="STOCK_CANCEL"/>
                            </div>
                            <field name="model_w_id" options="{'no_open': True}" />
                        </group>
                            <label for='list_fields'>Field Module</label>
                            <field name="list_fields" options="{'reload_on_button': true}">
                                <tree string="Fields Description" colors="blue:ttype in ('many2one', 'char',
                                                                'text', 'datetime', 'date','float', 'integer',
                                                                'selection')" editable="bottom" >
                                    <button name="add_field_name"
                                        string="Add the field in Reference Field"
                                        groups="account.group_account_manager"
                                        type="object" icon="STOCK_ADD"
                                        />
                                    <field name="name"/>
                                    <field name="field_description"/>
                                    <field name="ttype"/>
                                    <field name="model"/>
                                </tree>
                            </field>
                    </sheet>
                    <footer>
                        <button name="confirm_name" string="Create" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_field" model="ir.actions.act_window">
            <field name="name">Edit fields</field>
            <field name="res_model">view_fields</field>
            <field name="src_model">out_custom_fields</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_view_field_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
