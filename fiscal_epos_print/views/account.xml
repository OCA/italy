<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_account_journal_pos_user_form_fp90">
            <field name="name">POS Journal - Fiscal Printer field</field>
            <field name="model">account.journal</field>
            <field name="inherit_id"
                   ref="point_of_sale.view_account_journal_pos_user_form"/>
            <field name="arch" type="xml">
                <group name="amount_authorized" position="after">
                    <group name="fiscalprinter">
                        <field name="fiscalprinter_payment_type"/>
                        <field name="fiscalprinter_payment_index"
                               attrs="{'required': [('fiscalprinter_payment_type', 'in', ('2', '3'))], 'invisible': [('fiscalprinter_payment_type', 'not in', ('2', '3'))]}"/>
                    </group>
                </group>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_tax_printer_form_fp90">
            <field name="name">account.tax.printer.form.view</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <field name="fpdeptax" />
                </field>
            </field>
        </record>

        <record id="view_bank_statement_line_form_tickets" model="ir.ui.view">
            <field name="name">view_bank_statement_line_form_tickets</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account.view_bank_statement_line_form"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="pos_tickets_number" attrs="{'invisible': [('pos_tickets_number', '=', 0)]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
